<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.flights.FlightController"
      spacing="10" style="-fx-padding: 15;">

    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Поиск по номеру или аэропорту..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnSearch" text="Поиск"/>
        <Button fx:id="btnRefresh" text="Обновить"/>
    </HBox>

    <TableView fx:id="table" prefHeight="500">
        <columns>
            <TableColumn fx:id="colFlightNo" text="Рейс" prefWidth="100"/>
            <TableColumn fx:id="colDepartureAirport" text="Откуда" prefWidth="120"/>
            <TableColumn fx:id="colArrivalAirport" text="Куда" prefWidth="120"/>
            <TableColumn fx:id="colDeparture" text="Вылет" prefWidth="160"/>
            <TableColumn fx:id="colArrival" text="Прибытие" prefWidth="160"/>
            <TableColumn fx:id="colStatus" text="Статус" prefWidth="120"/>
            <TableColumn fx:id="colAircraft" text="Самолёт" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="btnAdd" text="Добавить"/>
        <Button fx:id="btnEdit" text="Изменить"/>
        <Button fx:id="btnDelete" text="Удалить"/>
    </HBox>

</VBox>
