<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.crew.CrewEditController"
      spacing="20"
      style="-fx-padding: 25; -fx-background-color: white;"
      alignment="TOP_CENTER">

    <!-- Заголовок -->
    <Label fx:id="titleLabel"
           text="Сотрудник"
           maxWidth="Infinity"
           alignment="CENTER"
           style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <!-- Форма -->
    <GridPane hgap="20" vgap="14">

        <columnConstraints>
            <ColumnConstraints minWidth="160" halignment="RIGHT"/>
            <ColumnConstraints minWidth="260" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Фамилия:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Имя:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Отчество:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="middleNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Роль:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="roleField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Квалификация:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="qualificationField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Стаж (лет):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="experienceField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Назначенный рейс:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="flightBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>

    <!-- Кнопки -->
    <HBox alignment="CENTER_RIGHT" spacing="16">
        <Button text="Сохранить"
                onAction="#onSave"
                prefWidth="140"/>

        <Button text="Отмена"
                onAction="#onCancel"
                prefWidth="140"/>
    </HBox>

</VBox>
