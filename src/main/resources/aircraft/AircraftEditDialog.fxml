<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER_LEFT" spacing="10"
      xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="org.example.client.controller.aircraft.AircraftEditController"
      style="-fx-padding: 20;">

    <Label text="Редактирование самолёта" style="-fx-font-size: 20;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Код:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="codeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Модель:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="modelField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Год выпуска:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="yearField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Вместимость:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="capacityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Статус:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusCombo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Налёт (часы):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="hoursField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnSave" text="Сохранить"/>
        <Button fx:id="btnCancel" text="Отмена"/>
    </HBox>

</VBox>
