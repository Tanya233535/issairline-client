<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="TOP_CENTER"
      spacing="20"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.aircraft.AircraftEditController"
      style="-fx-padding: 25;">

    <!-- Заголовок окна -->
    <Label fx:id="titleLabel"
           text="Самолёт"
           maxWidth="Infinity"
           alignment="CENTER"
           style="-fx-font-size: 22; -fx-font-weight: bold;"/>

    <!-- Основная форма -->
    <GridPane hgap="20" vgap="14">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="160"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="260"/>
        </columnConstraints>

        <Label text="Код:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="aircraftCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Модель:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="modelField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Год выпуска:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="yearField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Вместимость:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="capacityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Статус:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusBox" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Налёт:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="hoursField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Дата последнего ТО:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <DatePicker fx:id="maintenanceDateField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Нижние кнопки -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Сохранить" onAction="#onSave" prefWidth="120"/>
        <Button text="Отмена" onAction="#onCancel" prefWidth="120"/>
    </HBox>

</VBox>
