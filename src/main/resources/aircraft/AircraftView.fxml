<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.aircraft.AircraftController"
      spacing="15"
      style="-fx-padding: 25;"
      maxWidth="1400">

    <!-- Заголовок -->
    <Label text="Самолёты"
           style="-fx-font-size: 26; -fx-font-weight: bold;"/>

    <!-- Панель поиска -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <TextField fx:id="searchField"
                   promptText="Поиск по модели или коду..."
                   HBox.hgrow="ALWAYS"/>

        <Button text="Поиск" fx:id="btnSearch"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="Добавить"
                fx:id="btnAdd"
                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>

    <!-- Таблица -->
    <TableView fx:id="table"
               VBox.vgrow="ALWAYS"
               style="-fx-background-insets: 0; -fx-padding: 0; -fx-background-color: white;
                      -fx-border-color: #cfcfcf; -fx-border-radius: 4;">

        <columns>
            <TableColumn fx:id="colCode" text="Код" prefWidth="130"/>
            <TableColumn fx:id="colModel" text="Модель" prefWidth="200"/>
            <TableColumn fx:id="colYear" text="Год" prefWidth="90"/>
            <TableColumn fx:id="colCapacity" text="Вместимость" prefWidth="130"/>
            <TableColumn fx:id="colStatus" text="Статус" prefWidth="130"/>
            <TableColumn fx:id="colHours" text="Налёт" prefWidth="150"/>
        </columns>

    </TableView>

    <!-- Нижняя панель -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnEdit" text="Изменить" prefWidth="120"/>

        <Button fx:id="btnDelete" text="Удалить"
                prefWidth="120"
                style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>

        <Button fx:id="btnRefresh" text="Обновить" prefWidth="120"/>
    </HBox>

</VBox>
