<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.aircraft.AircraftEditController"
      spacing="12" style="-fx-padding: 20;">

    <Label text="Самолёт" style="-fx-font-size: 20; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="120"/>
            <ColumnConstraints halignment="LEFT" minWidth="200"/>
        </columnConstraints>

        <Label text="Код:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="aircraftCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Модель:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="modelField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Год выпуска:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="yearField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Вместимость:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="capacityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Статус:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusBox" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    </GridPane>

    <Label fx:id="errorLabel" style="-fx-text-fill: red;" />

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Отмена" onAction="#onCancel"/>
        <Button text="Сохранить" onAction="#onSave" style="-fx-font-weight: bold;" />
    </HBox>

</VBox>
