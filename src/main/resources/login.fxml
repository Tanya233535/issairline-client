<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.client.controller.LoginController"
            prefWidth="1920" prefHeight="1080"
            stylesheets="@login.css"
            style="-fx-background-color: linear-gradient(to bottom right, #e0eafc, #cfdef3);">

    <center>
        <VBox alignment="CENTER" spacing="40">

            <!-- Заголовок -->
            <Label text="ISS Airline"
                   style="-fx-font-size: 44; -fx-font-weight: bold; -fx-text-fill: #1d3557;" />

            <Label text="Информационно-справочная система"
                   style="-fx-font-size: 20; -fx-text-fill: #1d3557;" />

            <!-- Форма -->
            <VBox spacing="20" alignment="CENTER"
                  maxWidth="400"
                  style="-fx-background-color: white;
                         -fx-background-radius: 16;
                         -fx-padding: 40;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 25, 0, 0, 6);">

                <TextField fx:id="usernameField"
                           promptText="Логин"
                           styleClass="text-field"/>

                <PasswordField fx:id="passwordField"
                               promptText="Пароль"
                               styleClass="password-field"/>

                <Label fx:id="errorLabel"
                       style="-fx-text-fill: #e63946; -fx-font-size: 14;" />

                <Button text="Войти"
                        fx:id="loginBtn"
                        onAction="#onLogin"
                        styleClass="login-button"
                        prefWidth="260"/>

            </VBox>

            <Label text="© 2025 ISS Airline"
                   style="-fx-text-fill: #7c8a99; -fx-font-size: 12;" />

        </VBox>
    </center>

</BorderPane>
