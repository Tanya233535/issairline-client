<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.client.controller.LoginController"
            prefWidth="1920" prefHeight="1080"
            style="-fx-background-color: #f4f6f9;">

    <center>
        <VBox alignment="CENTER" spacing="50">

            <!-- Логотип или заголовок -->
            <Label text="ISS Airline"
                   style="-fx-font-size: 42; -fx-font-weight: bold; -fx-text-fill: #1d3557;" />

            <!-- Форма -->
            <VBox spacing="25" alignment="CENTER"
                  maxWidth="450"
                  style="-fx-background-color: white;
                         -fx-background-radius: 14;
                         -fx-padding: 40;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 35, 0, 0, 8);">

                <TextField fx:id="usernameField"
                           promptText="Логин"
                           style="-fx-padding: 12;
                                  -fx-font-size: 18;
                                  -fx-background-radius: 8;
                                  -fx-border-color: #d6d6d6;
                                  -fx-border-radius: 8;" />

                <PasswordField fx:id="passwordField"
                               promptText="Пароль"
                               style="-fx-padding: 12;
                                      -fx-font-size: 18;
                                      -fx-background-radius: 8;
                                      -fx-border-color: #d6d6d6;
                                      -fx-border-radius: 8;" />

                <Label fx:id="errorLabel"
                       style="-fx-text-fill: #e63946; -fx-font-size: 14;" />

                <Button text="Войти"
                        onAction="#onLogin"
                        prefWidth="260"
                        style="-fx-background-color: #1d3557;
                               -fx-text-fill: white;
                               -fx-background-radius: 8;
                               -fx-font-size: 20;
                               -fx-padding: 12;" />

            </VBox>

            <Label text="© 2025 ISS Airline"
                   style="-fx-text-fill: #7c8a99; -fx-font-size: 14;" />

        </VBox>
    </center>

</BorderPane>
