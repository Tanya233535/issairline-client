<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.passengers.PassengerController"
      spacing="10" style="-fx-padding: 20;">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Пассажиры" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Поиск по фамилии/номеру билета..." HBox.hgrow="ALWAYS"/>
        <Button text="Поиск" fx:id="btnSearch"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Добавить" fx:id="btnAdd" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="table" prefHeight="450">
        <columns>
            <TableColumn fx:id="colLastName" text="Фамилия" prefWidth="150"/>
            <TableColumn fx:id="colFirstName" text="Имя" prefWidth="120"/>
            <TableColumn fx:id="colTicket" text="Билет" prefWidth="120"/>
            <TableColumn fx:id="colPassport" text="Паспорт" prefWidth="120"/>
            <TableColumn fx:id="colSeat" text="Место" prefWidth="80"/>
            <TableColumn fx:id="colFlight" text="Рейс" prefWidth="140"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnEdit" text="Изменить"/>
        <Button fx:id="btnDelete" text="Удалить" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
        <Button fx:id="btnRefresh" text="Обновить"/>
    </HBox>

</VBox>
