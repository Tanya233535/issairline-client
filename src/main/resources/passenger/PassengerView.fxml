<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.passengers.PassengerController"
      spacing="15"
      style="-fx-padding: 25;">

    <!-- Заголовок -->
    <Label text="Пассажиры"
           style="-fx-font-size: 26; -fx-font-weight: bold;"/>

    <!-- Панель поиска -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <TextField fx:id="searchField"
                   promptText="Поиск по фамилии, паспорту или билету..."
                   HBox.hgrow="ALWAYS"/>

        <Button text="Поиск" fx:id="btnSearch"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="Добавить"
                fx:id="btnAdd"
                style="-fx-background-color:#27ae60; -fx-text-fill:white;"/>
    </HBox>

    <!-- Таблица -->
    <TableView fx:id="table"
               VBox.vgrow="ALWAYS"
               style="-fx-background-color: white;
                      -fx-padding: 0;
                      -fx-border-color: #cfcfcf;
                      -fx-border-radius: 4;">

        <columns>
            <TableColumn fx:id="colLastName" text="Фамилия" prefWidth="150"/>
            <TableColumn fx:id="colFirstName" text="Имя" prefWidth="120"/>
            <TableColumn fx:id="colPassport" text="Паспорт" prefWidth="130"/>
            <TableColumn fx:id="colTicket" text="Билет" prefWidth="130"/>
            <TableColumn fx:id="colSeat" text="Место" prefWidth="80"/>
            <TableColumn fx:id="colFlight" text="Рейс" prefWidth="140"/>
        </columns>

    </TableView>

    <!-- Нижняя панель кнопок -->
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <Button fx:id="btnEdit" text="Изменить" prefWidth="120"/>
        <Button fx:id="btnDelete" text="Удалить"
                prefWidth="120"
                style="-fx-background-color:#c0392b; -fx-text-fill:white;"/>
        <Button fx:id="btnRefresh" text="Обновить" prefWidth="120"/>
    </HBox>

</VBox>
