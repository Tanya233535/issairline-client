<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.passengers.PassengerEditController"
      spacing="10" style="-fx-padding: 20;">

    <Label text="Редактирование пассажира" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Фамилия:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Имя:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Отчество:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="middleNameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Номер паспорта:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="passportField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Номер билета:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="ticketField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Место:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="seatField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Рейс:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="flightBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Сохранить" onAction="#onSave"/>
        <Button text="Отмена" onAction="#onCancel"/>
    </HBox>

</VBox>
