<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.client.controller.flights.FlightEditController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-padding: 25; -fx-background-color: white;">

    <Label fx:id="titleLabel"
           text="Рейс"
           maxWidth="Infinity"
           alignment="CENTER"
           style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <GridPane hgap="20" vgap="14">

        <columnConstraints>
            <ColumnConstraints minWidth="180" halignment="RIGHT"/>
            <ColumnConstraints minWidth="280" hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Номер рейса:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="flightNoField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Аэропорт вылета:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="departureAirportField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Аэропорт прибытия:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="arrivalAirportField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Дата вылета:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateDep" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Время вылета:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="timeDep"
                   promptText="HH:mm"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Дата прибытия:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateArr" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Время прибытия:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="timeArr"
                   promptText="HH:mm"
                   GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Статус:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusBox" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Самолёт:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <ComboBox fx:id="aircraftBox" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="16">
        <Button text="Сохранить"
                prefWidth="140"
                onAction="#onSave"/>

        <Button text="Отмена"
                prefWidth="140"
                onAction="#onCancel"/>
    </HBox>

</VBox>
